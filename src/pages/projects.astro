---
import BaseLayout from '../layouts/BaseLayout.astro';
import { projects } from '../data/projects';
---

<BaseLayout title="Our Projects | Luna Handyman Solutions">
  <section class="py-16 bg-neutral-light-gray">
    <div class="max-w-6xl mx-auto px-6 text-center">
      <h1 class="text-4xl font-bold text-secondary mb-4">Our Projects</h1>
      <p class="text-neutral-dark-gray mb-12 max-w-2xl mx-auto">
        Explore some of our recent construction and renovation projects. 
        Each one reflects our dedication to quality, craftsmanship, and client satisfaction.
      </p>

      <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-3">
        {projects.map(project => (
          <div class="bg-white rounded-2xl shadow hover:shadow-xl transition p-4 text-left">
            <img
              src={project.image}
              alt={project.title}
              class="rounded-xl w-full h-56 object-cover mb-4"
              loading="lazy"
            />
            <h3 class="text-xl font-semibold text-neutral-dark-gray mb-2">{project.title}</h3>
            <p class="text-neutral-dark-gray text-sm">{project.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
