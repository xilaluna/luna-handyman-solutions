---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Home | Luna Handyman Solutions">
  <!-- Hero Section -->
  <section class="relative bg-[url('/images/hero.jpg')] bg-cover bg-center h-[80vh] flex items-center justify-center text-center text-white overflow-hidden">
    <div class="bg-black/60 absolute inset-0"></div>
    <div class="relative z-10 px-6 max-w-4xl">
      <h1 class="text-6xl md:text-7xl font-bold mb-6 leading-tight animate-fadeIn">Building Your Vision, Brick by Brick</h1>
      <p class="text-xl md:text-2xl mb-10 text-gray-100 leading-relaxed">Reliable construction and renovation services you can trust.</p>
      <a href="/contact" class="inline-block bg-yellow-500 hover:bg-yellow-600 text-gray-900 font-bold py-4 px-10 rounded-lg transition duration-300 transform hover:scale-105 shadow-lg">
        Get a Free Quote
      </a>
    </div>
  </section>

<main class="space-y-32">
    <!-- Services Section -->
    <section class="max-w-7xl mx-auto px-6 py-20">
      <div class="text-center mb-16">
        <h2 class="text-5xl font-bold text-gray-800 mb-4">Our Services</h2>
        <div class="w-24 h-1 bg-yellow-500 mx-auto"></div>
      </div>
      
      <div class="grid gap-10 md:grid-cols-3">
        <div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-2xl transition duration-300 transform hover:-translate-y-2 border-t-4 border-yellow-500">
          <div class="text-4xl text-yellow-500 mb-4">üèóÔ∏è</div>
          <h3 class="text-2xl font-bold text-gray-800 mb-4">Residential Construction</h3>
          <p class="text-gray-600 leading-relaxed">From foundations to finishes, we build dream homes with quality craftsmanship and attention to every detail.</p>
        </div>
        
        <div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-2xl transition duration-300 transform hover:-translate-y-2 border-t-4 border-yellow-500">
          <div class="text-4xl text-yellow-500 mb-4">üè¢</div>
          <h3 class="text-2xl font-bold text-gray-800 mb-4">Commercial Projects</h3>
          <p class="text-gray-600 leading-relaxed">We deliver durable and efficient spaces for your business to thrive and grow in a professional environment.</p>
        </div>
        
        <div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-2xl transition duration-300 transform hover:-translate-y-2 border-t-4 border-yellow-500">
          <div class="text-4xl text-yellow-500 mb-4">üî®</div>
          <h3 class="text-2xl font-bold text-gray-800 mb-4">Remodeling & Renovation</h3>
          <p class="text-gray-600 leading-relaxed">Upgrade your property with our expert renovation and restoration services that breathe new life into spaces.</p>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section class="bg-gradient-to-r from-gray-50 to-gray-100 py-20 px-6">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-4xl font-bold text-gray-800 mb-6">About Luna Handyman Solutions</h2>
            <p class="text-gray-700 text-lg leading-relaxed mb-6">
              With over 15 years of experience, Luna Handyman Solutions provides dependable and high-quality
              construction services. Our mission is to turn every client's vision into reality with
              professionalism, precision, and pride.
            </p>
            <div class="space-y-4">
              <div class="flex items-start">
                <span class="text-yellow-500 text-2xl mr-4">‚úì</span>
                <p class="text-gray-700">Expert craftspeople with proven track records</p>
              </div>
              <div class="flex items-start">
                <span class="text-yellow-500 text-2xl mr-4">‚úì</span>
                <p class="text-gray-700">Transparent communication and timeline management</p>
              </div>
              <div class="flex items-start">
                <span class="text-yellow-500 text-2xl mr-4">‚úì</span>
                <p class="text-gray-700">Quality materials and superior workmanship</p>
              </div>
            </div>
          </div>
          <div class="bg-white p-8 rounded-2xl shadow-xl">
            <div class="grid grid-cols-2 gap-6 text-center">
              <div class="py-6 border-b-2 border-yellow-500">
                <p class="text-4xl font-bold text-yellow-500 mb-2">15+</p>
                <p class="text-gray-700 font-semibold">Years of Experience</p>
              </div>
              <div class="py-6 border-b-2 border-yellow-500">
                <p class="text-4xl font-bold text-yellow-500 mb-2">100+</p>
                <p class="text-gray-700 font-semibold">Projects Completed</p>
              </div>
              <div class="py-6 border-t-2 border-yellow-500">
                <p class="text-4xl font-bold text-yellow-500 mb-2">1000+</p>
                <p class="text-gray-700 font-semibold">Happy Clients</p>
              </div>
              <div class="py-6 border-t-2 border-yellow-500">
                <p class="text-4xl font-bold text-yellow-500 mb-2">24/7</p>
                <p class="text-gray-700 font-semibold">Customer Support</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-gradient-to-r from-yellow-400 to-yellow-600 py-20 px-6 rounded-3xl mx-6">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Ready to Start Your Project?</h2>
        <p class="text-lg text-gray-800 mb-10 leading-relaxed">Let's discuss your ideas and bring them to life with our expert team.</p>
        <a href="/contact" class="inline-block bg-gray-900 text-white font-bold py-4 px-12 rounded-lg hover:bg-gray-800 transition duration-300 transform hover:scale-105 shadow-lg">
          Contact Us Today
        </a>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  :global(body) .animate-fadeIn {
    animation: fadeIn 0.8s ease-out;
  }
</style>
